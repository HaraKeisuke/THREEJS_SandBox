{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": false,
        "noLib": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./app"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 4,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true,
        "insertSpaceAfterCommaDelimiter": true
    },
    "exclude": [],
    "compileOnSave": false,
    "filesGlob": [
        "./**/*.{ts,tsx}",
        "!./node_modules/**/*.ts",
        "!./src/typings/**/*.ts"
    ],
    "files": [
        "./src/Interface/Vector3.ts",
        "./src/main.ts",
        "./src/Manager/CameraManager.ts",
        "./src/Manager/RendererManager.ts",
        "./src/Manager/SceneManager.ts",
        "./typings/node/node.d.ts",
        "./typings/threejs/three.d.ts",
        "./typings/tsd.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
